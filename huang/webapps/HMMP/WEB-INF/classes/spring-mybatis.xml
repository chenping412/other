<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <import resource="spring-mybatis-business.xml"/>

    <!-- mysql system-->
    <bean id="sqlSessionFactory_mysql_system" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource_mysql_hmmp"/>
        <property name="mapperLocations" value="classpath:mybatis/system/*.xml"/>
        <property name="plugins" ref="pageInterceptor" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.travel.system.dao"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory_mysql_system"/>
    </bean>
    <!--mysql system end-->

</beans>