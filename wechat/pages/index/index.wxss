/**index.wxss**/
.list {
  border-top: 8px solid  #F7F7F7;
}
.list .item{
  border-bottom: 8px solid  #F7F7F7;
  padding: 19rpx 25rpx 30rpx;
}
.list .item::after{
  content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}
.list .item .img{
  width: 220rpx;
  height: 166rpx;
}
.list .item .title{
  font-size: 16px;
  color: #333333;
  letter-spacing: 0.6rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.list .item .bot{
  font-size: 11px;
  color: #999999;
  line-height: 30rpx;
  height: 30rpx;
}
.list .item .bot::after{
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}
.list .item .from{
  float: left;
}
.list .item .time{
  float: right;
  margin-right: 30rpx;
}
.list .item .close{
  float: right;
  width: 40rpx;
  height: 20rpx;
  padding: 15rpx;
  transform: translateY(-10rpx);
}


.list .one .img{
  float: left;
  margin: 9rpx 53rpx 0 0;
}
.list .one .title{
  margin-bottom: 47rpx;
  height: 100rpx;
}

.list .three .title{
  margin-bottom: 11rpx;
}
.list .three .pic{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  margin-bottom: 23rpx;
}

.list .video{
  padding: 34rpx 25rpx 30rpx;
}
.list .video .inner{
  position: relative;
}
.list .video .img{
  width: 100%;
  height: 420rpx;
}
.list .video .play{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 110rpx;
  height: 82rpx;
  margin: -41rpx 0 0 -55rpx;
}
.list .video .bot{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background-image: linear-gradient(-180deg, rgba(0,0,0,0.00) 0%, #000000 100%);
}
.list .video .bot image{
  width: 16rpx;
  height: 18rpx;
  margin: 31rpx 9rpx 0 34rpx;
  float: left;
}
.list .video .bot .num{
  font-size: 9px;
  color: #FFFFFF;
  font-weight: bolder;
  line-height: 80rpx;
  float: left;
}
.list .video .bot .time{
  font-size: 9px;
  color: #FFFFFF;
  font-weight: bolder;
  line-height: 40rpx;
  text-align: center;
  width: 80rpx;
  height: 40rpx;
  margin: 20rpx 12rpx 0 0;
  background: #333333;
  border-radius: 20rpx;
  float: right;
}
